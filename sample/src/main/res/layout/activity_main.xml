<?xml version="1.0" encoding="utf-8"?>
<com.nightfarmer.themelib.view.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/winBackColor"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nightfarmer.themelib.sample.MainActivity">

    <com.nightfarmer.themelib.view.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/tcolor"
        android:padding="5dp"
        android:text="Hello ThemeLib!"
        android:textColor="?attr/bcolor" />

    <com.nightfarmer.themelib.view.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="变更主题"
        android:onClick="changeTheme"
        android:textColor="?attr/tcolor" />
</com.nightfarmer.themelib.view.LinearLayout>
